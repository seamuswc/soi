generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Listing {
  id              Int      @id @default(autoincrement())
  building_name   String
  latitude        Float
  longitude       Float
  floor           String
  sqm             Int
  cost            Int
  description     String
  youtube_link    String
  reference       String
  payment_network String   @default("solana") // Allowed values: 'solana' or 'thb'
  thai_only       Boolean  @default(false)
  has_pool        Boolean  @default(false)
  has_parking     Boolean  @default(false)
  is_top_floor    Boolean  @default(false)
  six_months      Boolean  @default(false)
  expires_at      DateTime
  created_at      DateTime @default(now())
  updated_at      DateTime @updatedAt
}

model Promo {
  id             Int      @id @default(autoincrement())
  code           String   @unique
  remaining_uses Int      @default(0)
  created_at     DateTime @default(now())
  updated_at     DateTime @updatedAt
}
