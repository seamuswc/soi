generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Listing {
  id              Int      @id @default(autoincrement())
  building_name   String
  latitude        Float
  longitude       Float
  floor           String
  sqm             Int
  cost            Int
  description     String
  youtube_link    String
  reference       String
  payment_network String   @default("solana")
  expires_at      DateTime
  created_at      DateTime @default(now())
  updated_at      DateTime @updatedAt
}
